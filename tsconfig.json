{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@faasjs/*": [
        "./packages/*/src"
      ]
    },
    "types": [
      "node"
    ]
  }
}
