{
  "extends": "./packages/faasjs/tsconfig.build.json",
  "compilerOptions": {
    "strictNullChecks": false,
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": {
      "@faasjs/*": [
        "./packages/*/src"
      ]
    },
    "types": [
      "node"
    ]
  },
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx"
  ]
}
