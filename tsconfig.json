{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "strictNullChecks": false,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "target": "ES2019",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@faasjs/*": ["./packages/*/src"]
    },
    "types": ["node", "jest", "bun"]
  }
}
