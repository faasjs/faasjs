{
  "name": "simple",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "faas server",
    "test": "jest --silent --maxWorkers=1"
  },
  "dependencies": {
    "faasjs": "file:../../packages/faasjs"
  },
  "devDependencies": {
    "@faasjs/jest": "file:../../packages/jest",
    "@faasjs/test": "file:../../packages/test"
  },
  "jest": {
    "verbose": false,
    "transform": {
      ".(jsx|tsx?)": "@faasjs/jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": ["**/*.ts"],
    "testRegex": "/*\\.test\\.ts$",
    "modulePathIgnorePatterns": ["/lib/", "/tmp/"]
  }
}
