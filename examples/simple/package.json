{
  "name": "simple",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "eslint --ext .ts ."
  },
  "dependencies": {
    "faasjs": "beta",
    "@faasjs/eslint-config-recommended": "beta"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 8
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@faasjs/recommended"
    ]
  },
  "eslintIgnore": [
    "tmp"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.ts"
    ],
    "testRegex": "/*\\.test\\.ts$",
    "modulePathIgnorePatterns": [
      "/lib/",
      "/tmp/"
    ]
  }
}
