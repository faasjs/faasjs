{
  "name": "auth",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "faas server",
    "test": "jest --silent --maxWorkers=1"
  },
  "dependencies": {
    "faasjs": "file:../../packages/faasjs",
    "@faasjs/knex": "file:../../packages/knex",
    "better-sqlite3": "^11.3.0"
  },
  "devDependencies": {
    "@faasjs/test": "file:../../packages/test",
    "@faasjs/jest": "file:../../packages/jest"
  },
  "jest": {
    "verbose": false,
    "transform": {
      ".(jsx|tsx?)": "@faasjs/jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": ["**/*.ts"],
    "testRegex": "/*\\.test\\.ts$",
    "modulePathIgnorePatterns": ["/lib/", "/tmp/"],
    "setupFilesAfterEnv": ["@faasjs/jest/jest.setup.js", "./jest.setup.ts"]
  }
}
