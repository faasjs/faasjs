{
  "name": "faasjs-mono",
  "version": "7.0.3",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "pub": "npm run lint && npm run build && node build-docs.cjs && tsx publish.ts",
    "clean": "rm -rf packages/*/node_modules packages/*/dist packages/*/.turbo coverage packages/*/*.log tmp *.log",
    "build": "npm run clean && npm exec turbo build && rm packages/*/dist/*.d.cts",
    "build:doc": "typedoc",
    "build:docs": "node build-docs.cjs",
    "lint": "biome check . --write",
    "ci": "vitest run --silent --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@testing-library/react": "*",
    "@testing-library/user-event": "*",
    "@testing-library/jest-dom": "*",
    "@vitejs/plugin-react": "*",
    "@vitest/coverage-v8": "*",
    "commander": ">=14.0.0",
    "jsdom": "*",
    "tsup": "*",
    "turbo": "*",
    "typedoc": "*",
    "typedoc-plugin-markdown": "*",
    "vite-tsconfig-paths": "*",
    "vitest": "*",
    "typescript": "*",
    "@types/node": "*",
    "husky": "*"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "npm@11.7.0",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.0.0"
  }
}
