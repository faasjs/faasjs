{
  "name": "faasjs-mono",
  "version": "v8.0.0-beta.2",
  "type": "module",
  "private": true,
  "scripts": {
    "test": "vitest run",
    "pub": "npm run build && node build-docs.cjs && node publish.ts",
    "clean": "rm -rf packages/*/node_modules packages/*/dist packages/*/.turbo coverage packages/*/*.log tmp *.log .turbo",
    "build": "npm run lint && npm run clean && npm exec turbo build && rm packages/*/dist/*.d.cts",
    "build:doc": "typedoc",
    "build:docs": "node build-docs.cjs",
    "lint": "tsc --noEmit && biome check . --write",
    "ci": "vitest run --silent --coverage"
  },
  "devDependencies": {
    "@testing-library/react": "*",
    "@testing-library/user-event": "*",
    "@testing-library/jest-dom": "*",
    "@vitejs/plugin-react": "*",
    "@vitest/coverage-v8": "*",
    "commander": ">=14.0.0",
    "jsdom": "*",
    "tsup": "*",
    "turbo": "*",
    "typedoc": "*",
    "typedoc-plugin-markdown": "*",
    "vite-tsconfig-paths": "*",
    "vitest": "*",
    "typescript": "*",
    "@types/node": "*"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@latest"
  },
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "npm@11.7.0",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.0.0"
  }
}
