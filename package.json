{
  "name": "faasjs-mono",
  "version": "8.0.0-beta.8",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "pub": "npm run build && npm run build:doc && node publish.ts",
    "clean": "rm -rf packages/*/node_modules packages/*/dist packages/*/.turbo coverage packages/*/*.log tmp *.log .turbo",
    "build": "npm run lint && npm run clean && npm exec turbo build && rm -f packages/*/dist/*.d.cts",
    "build:doc": "node build-docs.ts",
    "lint": "oxfmt -c packages/dev/configs/oxfmt.base.json . && oxlint -c packages/dev/configs/oxlint.base.json --fix .",
    "ci": "vitest run --silent --coverage"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "*",
    "@testing-library/react": "*",
    "@testing-library/user-event": "*",
    "@types/node": "*",
    "@vitejs/plugin-react": "*",
    "@vitest/coverage-v8": "*",
    "jsdom": "*",
    "oxfmt": "*",
    "oxlint": "*",
    "tsdown": "*",
    "turbo": "*",
    "typedoc": "*",
    "typedoc-plugin-markdown": "*",
    "typescript": "*",
    "vite-tsconfig-paths": "*"
  },
  "overrides": {
    "vite": "npm:vite@8.0.0-beta.14"
  },
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.0.0"
  },
  "packageManager": "npm@11.8.0"
}
